<h1>Create an entry</h1>
<div class="col-md-12">
	<%= form_for(@entry) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>
	  
	  <div class="field">
	  	<%= f.text_field :title, placeholder: "Title goes here...", class: "form-control"%>
	    <%= f.text_area :content, placeholder: "Compose new entry..." %>
	  </div>
	  <%= f.submit "Post", class: "btn btn-success" %>
	<% end %>
</div>