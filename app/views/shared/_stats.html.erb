<% @user ||= current_user %>
<div class="stats">
  <a href="#">
    <strong class="stat">
      <%= current_user.entries.count %>
    </strong>
      <% if current_user.entries.count > 1%>
      entries
      <% elsif current_user.entries.count == 1%>
      entry
      <% end %>
    
  </a>
  <a href="<%= following_user_path(@user) %>" class="spacing">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>" class="spacing"> 
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>